        <Label Name ="label2" Content="Nombre del Producto: " HorizontalAlignment="Left" Margin="45,105,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label3" Content="Proovedor: " HorizontalAlignment="Left" Margin="45,138,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label4" Content="Categoria del Producto: " HorizontalAlignment="Left" Margin="45,171,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label5" Content="Cantidad por unidad: " HorizontalAlignment="Left" Margin="45,238,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label6" Content="Precio Unitario: " HorizontalAlignment="Left" Margin="45,204,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label7" Content="Unidades de la Orden: " HorizontalAlignment="Left" Margin="45,271,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label8" Content="Nivel de reorganización: " HorizontalAlignment="Left" Margin="45,304,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Name ="label9" Content="¿Esta descontinuado? " HorizontalAlignment="Left" Margin="45,337,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
