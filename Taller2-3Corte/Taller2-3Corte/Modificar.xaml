        <TextBox Name="txtUnidadesxOrden" HorizontalAlignment="Left" Height="22" Margin="217,274,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128" FontFamily="Times New Roman" FontSize="16"/>
