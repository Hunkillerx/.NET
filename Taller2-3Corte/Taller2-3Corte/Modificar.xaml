        <Button x:Name="btnModificar" Content="MODIFICAR" HorizontalAlignment="Left" Margin="217,393,0,0" VerticalAlignment="Top" Width="75" Click="BtnModificar_Click"/>
        <Label x:Name ="label10" Content="Id Producto a modificar: " HorizontalAlignment="Left" Margin="490,99,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="txtIdModificar" HorizontalAlignment="Left" Height="22" Margin="662,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128" FontFamily="Times New Roman" FontSize="16"/>
        <Button x:Name="btnBuscar" Content="BUSCAR" HorizontalAlignment="Left" Margin="541,146,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.51,-0.438" Click="BtnBuscar_Click"/>
