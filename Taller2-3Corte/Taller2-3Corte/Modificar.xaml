        <RadioButton Name="rbtnNo" Content="No" HorizontalAlignment="Left" Margin="304,341,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="18"/>
        <ComboBox x:Name="cbxProovedor" HorizontalAlignment="Left" Margin="217,141,0,0" VerticalAlignment="Top" Width="256" >
        </ComboBox>
        <ComboBox x:Name="cbxCategoria" HorizontalAlignment="Left" Margin="217,174,0,0" VerticalAlignment="Top" Width="120">
